<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar>
      <ActionBar.actionItems>
        <ActionItem  android.systemIcon="ic_menu_add" ios.position="right" tap="goToAddFood"/>
      </ActionBar.actionItems>
  </ActionBar>

  <GridLayout rows="*, auto" class="pageBackground">
    <GridLayout row="0">
    <StackLayout  orientation="vertical" verticalAlignment="center">        
        <Button text="Breakfast" tap="onBtnTapped" class="foodBtn"/>
        <Button text="Lunch" tap="onBtnTapped" class="foodBtn"/>
        <Button text="Dinner" tap="onBtnTapped" class="foodBtn"/>
        <Button text="Avoid This" tap="onBtnTapped" class="avoidBtn"/>
      </StackLayout>
  </GridLayout>
      <GridLayout row="1" verticalAlignment="bottom">        
        <SegmentedBar id="segments" class="FontAwesome">
          <SegmentedBar.items>
            <SegmentedBarItem title="&#xf015;"/>
            <SegmentedBarItem title="&#xf073;" />
            <SegmentedBarItem title="&#xf0f5;" />
            <SegmentedBarItem title="&#xf1c5;" />
            <SegmentedBarItem title="&#xf041;"/>
          </SegmentedBar.items>
        </SegmentedBar>
     </GridLayout>
    </GridLayout>
</Page>
