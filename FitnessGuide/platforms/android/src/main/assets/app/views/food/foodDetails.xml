<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="onNavigatedTo">
	<ActionBar title="{{title}}">  		
	</ActionBar>

	<StackLayout>
		<Image src="{{picture}}" stretch ="fill" class="detailImage" id="img"/>
		<StackLayout orientation="vertical">
			<Label text="Products" textWrap="true" class="myLabel" />
			<Label text="{{products}}" textWrap="true" />
			<Label text="Content" textWrap="true" class="myLabel" />
			<Label text="{{content}}" textWrap="true" />
			<Label text="{{calories}}" textWrap="true" />
		    <Label text="Description:" textWrap="true" class="myLabel"  />
		    <TextView text="{{explanation}}"  id="explanationText"  textWrap="true" editable="false"  class="explanation"
		    />
		</StackLayout>
		
	</StackLayout>
</Page>