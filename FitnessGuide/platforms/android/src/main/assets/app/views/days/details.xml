<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="onNavigatedTo">
	<ActionBar title="{{Title}}"/>
		<GridLayout rows="300,*" class="listBackground">
			<Image src="{{pics}}" stretch ="fill" class="detailImage" id="myImage" row="0"/>
			<StackLayout orientation="vertical" row="1" >
				<Label text="{{mainMuscle}}" textWrap="true" class="myLabel"  />
				<Label text="{{subMuscle}}" textWrap="true" />
				<TextView  text="{{explanation}}" textWrap="true" id="explanation" editable="false" class="explanation"/>
			</StackLayout>	
		</GridLayout>
	</Page>